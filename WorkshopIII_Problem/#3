from sklearn import datasets
from sklearn.model_selection import train_test_split
from sklearn import tree
from sklearn.metrics import confusion_matrix
from sklearn import metrics

#นำเข้าข้อมูล iris.data และ iris.target จาก sklearn
iris = datasets.load_iris()
x = iris.data
y = iris.target
x_train, x_test, y_train, y_test = train_test_split(x, y, test_size=0.35, random_state=1)

#สร้าง Model Decision Tree
model = tree.DecisionTreeClassifier(max_depth=4)
model.fit(x_train, y_train)


#Predict y_pred
y_pred = model.predict(x_test)

#แสดงผล y_test และ y_pred
print("x_train = ", x_train)
print("x_test = ", x_test)
print("y_train = ", y_train)
print("y_test = ", y_test)
print("Y_TRUE (y_test) = ", y_test)
print("Y_PRED (y_pred) = ", y_pred)

#แสดงผล Confusion_matrix
print(confusion_matrix(y_test, y_pred))

##แสดงผลการประเมินผลโมเดล ในส่วนของ F-measure
f_measure = metrics.f1_score(y_test, y_pred, average='weighted')
print("F-measure = %.2f" %(f_measure))


#แสดงภาพแบบจำลองต้นไม้การตัดสินใจ (Decision Tree Model)
tree.plot_tree(model)
